# bottom left
set $display1 DP-4

# bottom center
set $display2 DP-5

# bottom right
set $display3 DP-6

 # top center
set $display4 DP-1

output $display1 position 0 1080
output $display2 position 1920 1080
output $display3 position 3840 1080
output $display4 position 1920 0


workspace 1.1 output $display1
workspace 2.1 output $display2
workspace 3.1 output $display3
workspace 4.1 output $display4

workspace 1.2 output $display1
workspace 2.2 output $display2
workspace 3.2 output $display3
workspace 4.2 output $display4

workspace 1.3 output $display1
workspace 2.3 output $display2
workspace 3.3 output $display3
workspace 4.3 output $display4
