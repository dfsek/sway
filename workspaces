set $room 1
bindsym $mod+q set $$room 1
bindsym $mod+a set $$room 2
bindsym $mod+z set $$room 3

# Switch to workspace
bindsym $mod+1 workspace 1.$$room
bindsym $mod+2 workspace 2.$$room
bindsym $mod+3 workspace 3.$$room
bindsym $mod+4 workspace 4.$$room
bindsym $mod+5 workspace 5.$$room
bindsym $mod+6 workspace 6.$$room
bindsym $mod+7 workspace 7.$$room
bindsym $mod+8 workspace 8.$$room
bindsym $mod+9 workspace 9.$$room
bindsym $mod+0 workspace 10.$$room

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1.$$room
bindsym $mod+Shift+2 move container to workspace 2.$$room
bindsym $mod+Shift+3 move container to workspace 3.$$room
bindsym $mod+Shift+4 move container to workspace 4.$$room
bindsym $mod+Shift+5 move container to workspace 5.$$room
bindsym $mod+Shift+6 move container to workspace 6.$$room
bindsym $mod+Shift+7 move container to workspace 7.$$room
bindsym $mod+Shift+8 move container to workspace 8.$$room
bindsym $mod+Shift+9 move container to workspace 9.$$room
bindsym $mod+Shift+0 move container to workspace 10.$$room
